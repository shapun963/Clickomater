<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#000000"
    app:cardBackgroundColor="#88000000"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/img_move"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_move"
        android:tooltipText="Move" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
            android:id="@+id/lin_more_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/img_open_app"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_baseline_android_24"
                android:tooltipText="Open App" />
        <ImageView
                android:id="@+id/img_repeat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_baseline_repeat_24"
                android:tooltipText="Repeat" />
        <ImageView
                android:id="@+id/img_open_notification_panel"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_notifications"
                android:tooltipText="Open Notification" />
        <ImageView
            android:id="@+id/img_intent"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/baseline_open_in_new_24"
            android:tooltipText="Open Notification" />
        <ImageView
            android:id="@+id/img_save"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_save"
            android:tooltipText="Save" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:layout_gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:rotation="270"
            android:src="@drawable/ic_triangle"
            android:tooltipText="Back" />

        <ImageView
            android:id="@+id/img_home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_home"
            android:tooltipText="Home" />

        <ImageView
            android:id="@+id/img_recent"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_square"
            android:tooltipText="Open Recent" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>

    <!-- <ImageView
         android:id="@+id/img_expand_collapse"
         android:layout_width="40dp"
         android:layout_height="40dp"
         android:padding="8dp"
         android:rotation="180"
         android:src="@drawable/ic_expand"
         android:tooltipText="Expand" />-->
</androidx.cardview.widget.CardView>
